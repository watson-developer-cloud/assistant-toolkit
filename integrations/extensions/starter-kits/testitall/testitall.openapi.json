  "servers": [
    {
      "url": "https://{host}:{port}",
      "description": "Your API server (with https enabled)",
      "variables": {
        "host": {
          "default": "",
          "description": "Hostname of the API server"
        },
        "port": {
          "default": "443",
          "description": "Port of the API server"
        }
      }
    },
    {
      "url": "http://{host}:{port}",
